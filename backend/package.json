{
  "name": "events-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn seed && ts-node-dev --transpile-only src/server.ts",
    "seed": "ts-node-dev src/services/seeds/seed-host.ts",
    "create-migration": "ts-node-dev node_modules/typeorm/cli.js migration:create",
    "run-migration": "ts-node-dev node_modules/typeorm/cli.js migration:run -- -d data-source.ts",
    "revert-migration": "ts-node-dev node_modules/typeorm/cli.js migration:revert -- -d data-source.ts",
    "lint": "eslint ./src --fix",
    "test": "jest --runInBand --watch"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
